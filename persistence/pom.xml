        </dependency>


    </dependencies>

    <properties>
        <spring.version>3.0.5.RELEASE</spring.version>
        <spring-security.version>3.0.3.RELEASE</spring-security.version>
    </properties>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>dbunit-maven-plugin</artifactId>
                    <version>1.0-beta-3</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <testResources>
            <testResource>
                <directory>src/test/config/spring</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/main/config/spring</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>
        </testResources>
        <resources>
            <resource>
                <!-- this should pull in your hibernate template (.hbm.xml) files -->
                <directory>src/main/config/hibernate</directory>
                <includes>
                    <include>npa.xml</include>
                </includes>
                <filtering>false</filtering>
            </resource>
            <resource>
                <!-- this should pull in your hibernate template (.hbm.xml) files -->
                <directory>src/main/config/spring</directory>
                <includes>
                    <include>dao.xml</include>
                </includes>
                <filtering>false</filtering>
            </resource>

        </resources>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <dependencies>

                    <dependency>
                        <groupId>ant</groupId>
                        <artifactId>ant-antlr</artifactId>
                        <version>1.6.5</version>
                    </dependency>

                    <dependency>
                        <groupId>ant</groupId>
                        <artifactId>ant-optional</artifactId>
                        <version>1.5.3-1</version>
                        <scope>compile</scope>
                    </dependency>


                </dependencies>
                <configuration>
                    <tasks>

                        <touch file="src/main/java/org/yes/cart/domain/entity/impl/AttributeEntity.java"/>
                        <replace file="src/main/java/org/yes/cart/domain/entity/impl/AttributeEntity.java"
                                 token="super(code);"
                                 value="// super (code); hbm2java a little bit stupid"/>
                        <taskdef name="replaceregexp"
                                 classname="org.apache.tools.ant.taskdefs.optional.ReplaceRegExp"/>
                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/ProductEntity.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>
                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/BrandEntity.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>
                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/AttrValueEntityProduct.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>
                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/AttrValueEntityProductSku.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>

                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/ProductCategoryEntity.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>
                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/ProductSkuEntity.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>

                        <replaceregexp
                                file="src/main/java/org/yes/cart/domain/entity/impl/SkuPriceEntity.java"
                                match="\* UNCOMMENT(.*)"
                                replace="\*/\1 /\*"
                                byline="false" flags="mg"/>


                    </tasks>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>dbunit-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
            </plugin>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>src/main/java/org/yes/cart/domain/entity</directory>
                            <includes>
                                <include>*.java</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                        <fileset>
                            <directory>${basedir}</directory>
                            <includes>
                                <include>luceneindex</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>dbunit-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
            </plugin>
            <plugin>
                <!-- hibernate ddl generation -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>hibernate3-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <components>
                        <component>
                            <name>hbm2java</name>
                            <implementation>annotationconfiguration</implementation>
                            <outputDirectory>src/main/java</outputDirectory>
                        </component>
                        <component>
                            <name>hbm2ddl</name>
                            <outputDirectory>.</outputDirectory>
                        </component>
                    </components>
                    <componentProperties>
                        <configurationfile>src/main/config/hibernate/hibernate.cfg.xml</configurationfile>
                        <drop>false</drop>
                        <create>true</create>
                        <export>false</export>
                        <jdk5>true</jdk5>
                        <ejb3>true</ejb3>
                        <format>true</format>
                    </componentProperties>

                </configuration>
                <executions>


                    <execution>
                        <id>create-entity</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>hbm2java</goal>
                        </goals>
                    </execution>

                    <execution>
                        <id>export-oracle</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>hbm2ddl</goal>
                        </goals>
                        <configuration>
                            <componentProperties>
                                <propertyfile>src/main/resources/oracle/hibernate.properties</propertyfile>
                                <outputfilename>sql/resources/oracle/create-tables.sql</outputfilename>
                            </componentProperties>
                        </configuration>
                    </execution>
                    <execution>
                        <id>export-hsql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>hbm2ddl</goal>
                        </goals>
                        <configuration>
                            <componentProperties>
                                <propertyfile>src/main/resources/hsql/hibernate.properties</propertyfile>
                                <outputfilename>sql/resources/hsql/create-tables.sql</outputfilename>
                            </componentProperties>
                        </configuration>
                    </execution>
                    <execution>
                        <id>export-mysql</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>hbm2ddl</goal>
                        </goals>
                        <configuration>
                            <componentProperties>
                                <propertyfile>src/main/resources/mysql/hibernate.properties</propertyfile>
                                <outputfilename>sql/resources/mysql/create-tables.sql</outputfilename>
                            </componentProperties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


</project>
