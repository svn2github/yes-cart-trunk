<Context path="/yes-shop" crossContext="true" >

    <Resource name="jdbc/yespayjndi"
              auth="Container"
              scope="Shareable"
              type="javax.sql.DataSource"
              maxActive="1000"
              maxIdle="30"
              maxWait="10000"
              removeAbandoned="true"
              username="${db.config.yespay.login}"
              password="${db.config.yespay.password}"
              driverClassName="${db.config.yespay.driver}"
              url="${db.config.yespay.url}"
              minEvictableIdleTimeMillis="864000000"/>



    <Resource name="jdbc/yesjndi"
              auth="Container"
              scope="Shareable"
              type="javax.sql.DataSource"
              maxActive="100"
              maxIdle="30"
              maxWait="10000"
              removeAbandoned="true"
              username="${db.config.yes.login}"
              password="${db.config.yes.password}"
              driverClassName="${db.config.yes.driver}"
              url="${db.config.yes.url}"
              minEvictableIdleTimeMillis="864000000"/>



    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           debug="4"
           digest="MD5"
           localDataSource="true"
           dataSourceName="jdbc/yesjndi"
           userTable="TMANAGER"
           userNameCol="email"
           userCredCol="password"
           userRoleTable="TMANAGERROLE"
           roleNameCol="code"/>

    <Parameter name="NODE_ID" value="${cluster.config.yes.node_id}" override="false"/>
    <Parameter name="BACKDOOR_URI" value="${cluster.config.yes.backdoor_uri}" override="false"/>
    <Parameter name="CACHEDIRECTOR_URI" value="${cluster.config.yes.cachedirector_uri}" override="false"/>
    <Parameter name="LUCENE_INDEX_DISABLED" value="${cluster.config.yes.lucene_index_disabled}" override="false"/>

</Context>

