    <properties>
        <wicket.version>1.5-RC5.1</wicket.version>
        <!--wicket.version>1.5-SNAPSHOT</wicket.version-->

        <jetty.version>6.1.4</jetty.version>
        <mysql-connector.version>5.1.13</mysql-connector.version>
