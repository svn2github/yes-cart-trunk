    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>dbunit-maven-plugin</artifactId>
                    <version>1.0-beta-3</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.5</version>
                    <configuration>
                        <forkMode>pertest</forkMode>
                        <argLine>-Xms512m -Xmx1024m</argLine>
                        <testFailureIgnore>false</testFailureIgnore>
                        <includes>
                            <include>**/DomainTestSuite.java</include>
                            <include>**/DtoTestSuite.java</include>
                            <include>**/ImageTestSuite.java</include>
                            <include>**/HandlerTestSuite.java</include>
                            <include>**/OrderTestSuite.java</include>
                            <include>**/PaymentTestSuite.java</include>
                            <include>**/ShoppingCartTestSuite.java</include>

                            <include>**/TestDtoFactoryImpl.java</include>
                            <include>**/CustomerRegistrationMessageListenerTest.java</include>
                            <include>**/ServiceLocatorImplTest.java</include>
                            <include>**/WebServiceInstantiationStrategyImplTest.java</include>
                            <include>**/MailComposerImplTest.java</include>
                            <include>**/ExtendedConversionServiceTest.java</include>
                            <include>**/StringValueToPairListConverterTest.java</include>

                            <include>**/ShopTopSellerServiceImplTest.java</include>
                        </includes>

                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <testResources>
            <testResource>
                <directory>../payment-api/src/test/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>

            <testResource>
                <directory>../core-modules/core-module-payment-base/src/test/resources</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>

            <testResource>
                <directory>src/test/config/spring</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/config/spring</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </testResource>

            <testResource>
                <directory>src/main/config/spring</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${basedir}</directory>
                            <includes>
                                <include>luceneindex</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
                <executions>
                    <execution>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
