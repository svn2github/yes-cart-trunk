<import-descriptor>

    <entityIntface>org.yes.cart.domain.entity.Shop</entityIntface>

    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>shop.csv</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <column-descriptor>
            <columnIndex>0</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>code</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select c from ShopEntity c where c.code = ?1</lookupQuery>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>name</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>2</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>description</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>3</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>fspointer</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>4</columnIndex>
            <fieldType>SIMPLE_SLAVE_FIELD</fieldType>
            <name>shopUrl</name>

            <importDescriptor class="import-descriptor">
                <entityIntface>org.yes.cart.domain.entity.ShopUrl</entityIntface>
                <importFile class="file-descriptor">
                    <columnDelimeter>;</columnDelimeter>
                    <textQualifier null="true"/>
                    <ignoreFirstLine>false</ignoreFirstLine>
                </importFile>


                <importColumns class="list">

                    <column-descriptor>
                        <columnIndex>-1</columnIndex>
                        <fieldType>FK_FIELD</fieldType>
                        <name>shop</name>
                        <useMasterObject>true</useMasterObject>
                    </column-descriptor>

                    <column-descriptor>
                        <columnIndex>0</columnIndex>
                        <fieldType>FIELD</fieldType>
                        <name>url</name>
                        <regExp>(.*)</regExp>
                        <useMasterObject>true</useMasterObject>
                        <lookupQuery>select u from ShopUrl u where u.url = ?1 and u.shop = ?2</lookupQuery>
                    </column-descriptor>

                </importColumns>
            </importDescriptor>


        </column-descriptor>


        <column-descriptor>
            <columnIndex>5</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>imageVaultFolder</name>
        </column-descriptor>


    </importColumns>
    <importFolder>src/test/resources/import</importFolder>
</import-descriptor>