<import-descriptor>
    <!--
    Example how related bulk import can consune the same file several times
    -->
    <entityIntface>org.yes.cart.domain.entity.Category</entityIntface>

    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>category.csv</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <regExp>(.*)</regExp>
            <lookupQuery>
                select p from CategoryEntity p
                where p.name = ?1
            </lookupQuery> <!-- TODO atm we can not pass second parameter to lookup query "and p.category.name = ?2" -->
        </column-descriptor>

        <!-- Name -->
        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>name</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!-- product type -->
        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>productType</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select pt from ProductTypeEntity pt where pt.name = ?1</lookupQuery>
        </column-descriptor>

        <!-- Description -->
        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>description</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!-- Category rank in parent category -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>rank</name>
            <constant>500</constant>
        </column-descriptor>

        <!-- navigation by attributes -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>navigationByAttributes</name>
            <constant>true</constant>
        </column-descriptor>

        <!-- navigation by brand -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>navigationByBrand</name>
            <constant>true</constant>
        </column-descriptor>


        <!-- navigation by price -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>navigationByPrice</name>
            <constant>true</constant>
        </column-descriptor>

        <!-- navigation by price. tiers description -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>navigationByPriceTiers</name>
            <constant>
                <![CDATA[


<pricetree>
    <priceMap>
        <entry>
            <string>USD</string>
            <list>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">0</first>
                        <second class="big-decimal">200</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">200</first>
                        <second class="big-decimal">500</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">500</first>
                        <second class="big-decimal">1000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">1000</first>
                        <second class="big-decimal">1300</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">1300</first>
                        <second class="big-decimal">1500</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">1500</first>
                        <second class="big-decimal">2000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">2000</first>
                        <second class="big-decimal">3000</second>
                    </priceRange>
                </pricenode>
            </list>
        </entry>
        <entry>
            <string>UAH</string>
            <list>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">0</first>
                        <second class="big-decimal">5000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">5000</first>
                        <second class="big-decimal">6000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">6000</first>
                        <second class="big-decimal">8000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">8000</first>
                        <second class="big-decimal">10000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">10000</first>
                        <second class="big-decimal">16000</second>
                    </priceRange>
                </pricenode>
                <pricenode>
                    <priceRange>
                        <first class="big-decimal">16000</first>
                        <second class="big-decimal">24000</second>
                    </priceRange>
                </pricenode>
            </list>
        </entry>
    </priceMap>
</pricetree>




                ]]>
            </constant>
        </column-descriptor>


        <!-- Parent Category Id -->
        <column-descriptor>
            <columnIndex>0</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>parentId</name>
            <regExp>(.*)</regExp>
        </column-descriptor>



    </importColumns>
    <importFolder>src/test/resources/import</importFolder>
</import-descriptor>