<price-navigation  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/category-price-navigation-1.0.0.xsd">
    <currencies>
        <currency>
            <name>EUR</name>
            <price-tiers>
                <price-tier>
                    <from>0</from>
                    <to>200</to>
                </price-tier>
                <price-tier>
                    <from>200</from>
                    <to>500</to>
                </price-tier>
                <price-tier>
                    <from>500</from>
                    <to>1000</to>
                </price-tier>
                <price-tier>
                    <from>1000</from>
                    <to>1300</to>
                </price-tier>
                <price-tier>
                    <from>1300</from>
                    <to>1500</to>
                </price-tier>
                <price-tier>
                    <from>1500</from>
                    <to>2000</to>
                </price-tier>
                <price-tier>
                    <from>2000</from>
                    <to>3000</to>
                </price-tier>
            </price-tiers>
        </currency>
        <currency>
            <name>RUS</name>
            <price-tiers>
                <price-tier>
                    <from>0</from>
                    <to>5000</to>
                </price-tier>
                <price-tier>
                    <from>5000</from>
                    <to>6000</to>
                </price-tier>
                <price-tier>
                    <from>6000</from>
                    <to>8000</to>
                </price-tier>
                <price-tier>
                    <from>8000</from>
                    <to>10000</to>
                </price-tier>
                <price-tier>
                    <from>10000</from>
                    <to>16000</to>
                </price-tier>
                <price-tier>
                    <from>16000</from>
                    <to>24000</to>
                </price-tier>
            </price-tiers>
        </currency>
    </currencies>
</price-navigation>