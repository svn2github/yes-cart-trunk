<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.ProdTypeAttributeViewGroup</entity-type>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>productypeattributeviewgroupnames.csv</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <select-sql>select p from ProdTypeAttributeViewGroupEntity p where p.guid = {guid}</select-sql>

    <import-columns>

        <!-- Product type -->
        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.ProductType</entity-type>
            <name>producttype</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select p from ProductTypeEntity p where p.name = {producttype}</lookup-query>
        </column-descriptor>

        <!-- primary key -->
        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FIELD</field-type>
            <name>guid</name>
            <value-regex>(.{0,36})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>


        <!-- attr view group -->
        <column-descriptor>
            <column-index>2</column-index>
            <field-type>FIELD</field-type>
            <name>name</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>en</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>4</column-index>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>ru</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!-- attributes code list -->
        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FIELD</field-type>
            <name>attrCodeList</name>
            <value-regex>(.{0,4000})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

    </import-columns>
</import-descriptor>