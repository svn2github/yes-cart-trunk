<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.Product</entity-type>

    <import-directory>src/test/resources/import</import-directory>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>productentity.csv</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <import-columns>

        <!-- Primary key -->
        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FIELD</field-type>
            <name>code</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select p from ProductEntity p where p.code = ?1</lookup-query>
        </column-descriptor>


        <!--  Productname -->
        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FIELD</field-type>
            <name>name</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!-- product type -->
        <column-descriptor>
            <column-index>2</column-index>
            <field-type>FK_FIELD</field-type>
            <name>producttype</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select pt from ProductTypeEntity pt where pt.name = ?1</lookup-query>
        </column-descriptor>

        <!-- brand -->
        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FK_FIELD</field-type>
            <name>brand</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select b from BrandEntity b where b.name = ?1</lookup-query>
        </column-descriptor>

        <!-- availability type -->
        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>availability</name>
            <value-constant>1</value-constant>
        </column-descriptor>


        <!-- 9 key - value attribute  -->
       <column-descriptor>
            <column-index>9</column-index>
            <field-type>KEYVALUE_SLAVE_FIELD</field-type>
            <name>attribute</name>
            <import-descriptor>
                <entity-type>org.yes.cart.domain.entity.AttrValueProduct</entity-type>
                <import-directory/>
                <import-file-descriptor>
                    <file-encoding/>
                    <file-name-mask/>
                    <ignore-first-line>false</ignore-first-line>
                    <column-delimiter>;</column-delimiter>
                    <text-qualifier>&quot;</text-qualifier>
                </import-file-descriptor>
                <insert-sql>INSERT INTO TPRODUCTATTRVALUE (PRODUCT_ID, CODE, VAL ) VALUES ({masterObjectId},'{code}','{val}')</insert-sql>
                <import-columns>
                    <column-descriptor>
                        <column-index>-1</column-index>
                        <field-type>FK_FIELD</field-type>
                        <name>product</name>
                        <use-master-object>true</use-master-object>
                    </column-descriptor>
                    <column-descriptor>
                        <column-index>0</column-index>
                        <field-type>FIELD</field-type>
                        <name>code</name>
                        <value-regex>(.{0,255})(.*)-></value-regex>
                        <value-regex-group>1</value-regex-group>
                        <lookup-query>select v from AttrValueEntityProduct v where
                            v.attribute.code = ?1 and
                            v.product = ?2
                        </lookup-query>
                        <use-master-object>true</use-master-object>
                    </column-descriptor>
                    <column-descriptor>
                        <column-index>0</column-index>
                        <field-type>FK_FIELD</field-type>
                        <name>attribute</name>
                        <value-regex>(.{0,255})(.*)-></value-regex>
                        <value-regex-group>1</value-regex-group>
                        <lookup-query>select a from AttributeEntity a where a.code = ?1</lookup-query>
                    </column-descriptor>
                    <column-descriptor>
                        <column-index>0</column-index>
                        <field-type>FIELD</field-type>
                        <name>val</name>
                        <value-regex>->(.{0,4000})(.*)</value-regex>
                        <value-regex-group>1</value-regex-group>
                    </column-descriptor>
                </import-columns>
            </import-descriptor>
        </column-descriptor>





        <!-- Description -->
        <column-descriptor>
            <column-index>10</column-index>
            <field-type>FIELD</field-type>
            <name>description</name>
            <value-regex>(.{0,4000})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!--featured-->
        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>featured</name>
            <value-constant>false</value-constant>
        </column-descriptor>

    </import-columns>
</import-descriptor>