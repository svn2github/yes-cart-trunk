        <!-- 9 key - value attribute  -->
       <column-descriptor>
            <columnIndex>9</columnIndex>
            <fieldType>KEYVALUE_SLAVE_FIELD</fieldType>
            <name>attribute</name>
            <importDescriptor class="import-descriptor">
                <entityIntface>org.yes.cart.domain.entity.AttrValueProduct</entityIntface>
                <importFile class="file-descriptor">
                    <columnDelimeter>;</columnDelimeter>
                    <textQualifier null="true"/>
                    <ignoreFirstLine>false</ignoreFirstLine>
                </importFile>
                <importColumns class="list">
                    <column-descriptor>
                        <columnIndex>-1</columnIndex>
                        <fieldType>FK_FIELD</fieldType>
                        <name>product</name>
                        <useMasterObject>true</useMasterObject>
                    </column-descriptor>
                    <column-descriptor>
                        <columnIndex>0</columnIndex>
                        <fieldType>FIELD</fieldType>
                        <name>val</name>
                        <regExp>(.*)->(.*)</regExp>
                        <forceGroupCount>2</forceGroupCount>
                        <useMasterObject>true</useMasterObject>
                        <lookupQuery>select v from AttrValueEntityProduct v where
                            v.val = ?1 and
                            v.attribute.code = ?2 and
                            v.product = ?3
                        </lookupQuery>
                    </column-descriptor>
                    <column-descriptor>
                        <columnIndex>-1</columnIndex>
                        <fieldType>FK_FIELD</fieldType>
                        <name>attribute</name>
                        <lookupQuery>select a from AttributeEntity a where a.code = 'Колір_вставки'</lookupQuery>
                    </column-descriptor>
                </importColumns>
            </importDescriptor>
        </column-descriptor>





        <!--  описание -->
