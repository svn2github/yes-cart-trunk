<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.SkuPrice</entity-type>

    <import-directory>src/test/resources/import</import-directory>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>productentity.csv</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <import-columns>

        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FIELD</field-type>
            <name/>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>
                select p from SkuPriceEntity p
                where p.sku.code = ?1
                and p.shop.code = 'SHOIP1'
                and p.currency = 'USD'
                and p.quantity = 1
            </lookup-query> <!-- at this moment i see only one price tier -->
        </column-descriptor>

        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FK_FIELD</field-type>
            <name>sku</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select p from ProductSkuEntity p where p.code = ?1</lookup-query>
        </column-descriptor>


        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FK_FIELD</field-type>
            <name>shop</name>
            <lookup-query>select a from ShopEntity a where a.code = 'SHOIP1'</lookup-query>
        </column-descriptor>

        <column-descriptor>
            <column-index>7</column-index>
            <field-type>FIELD</field-type>
            <name>regularPrice</name>
        </column-descriptor>


        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>quantity</name>
            <value-constant>1</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>currency</name>
            <value-constant>USD</value-constant>
        </column-descriptor>

    </import-columns>
</import-descriptor>