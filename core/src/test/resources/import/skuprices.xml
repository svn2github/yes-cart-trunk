<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.SkuPrice</entity-type>

    <import-directory>src/test/resources/import</import-directory>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>skuprices.csv</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <select-sql>select p from SkuPriceEntity p where p.sku.code = {sku} and p.shop.code = {shop} and p.currency = {currency} and p.quantity = {quantity}</select-sql>

    <import-columns>

        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.ProductSku</entity-type>
            <name>sku</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select p from ProductSkuEntity p where p.code = {sku}</lookup-query>
        </column-descriptor>


        <column-descriptor>
            <column-index>2</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Shop</entity-type>
            <name>shop</name>
            <lookup-query>select a from ShopEntity a where a.code = {shop}</lookup-query>
        </column-descriptor>

        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FIELD</field-type>
            <name>currency</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>4</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>regularPrice</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>5</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>quantity</name>
        </column-descriptor>

    </import-columns>
</import-descriptor>