            </mx:DataGrid>

        </mx:VBox>
        <mx:VBox paddingLeft="2" paddingTop="2" paddingRight="2" paddingBottom="2"  width="100%" height="70%">

            <mx:TabNavigator width="100%" height="100%" id="shopTabNavigator" creationPolicy="all">

