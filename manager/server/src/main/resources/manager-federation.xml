<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="shopFederationStrategy" class="org.yes.cart.service.federation.impl.ShopFederationStrategyImpl">
        <constructor-arg index="0" ref="userManagementService"/>
        <constructor-arg index="1" ref="cacheManager"/>
    </bean>

    <bean id="managerFederationFilter" class="org.yes.cart.service.federation.impl.ManagerFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1" ref="userManagementService"/>
    </bean>

    <bean id="customerFederationFilter" class="org.yes.cart.service.federation.impl.CustomerFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1" ref="dtoCustomerService"/>
    </bean>

    <bean id="customerOrderFederationFilter" class="org.yes.cart.service.federation.impl.CustomerOrderFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1" ref="dtoCustomerOrderService"/>
    </bean>

    <bean id="customerOrderPaymentFederationFilter" class="org.yes.cart.service.federation.impl.CustomerOrderPaymentFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1" ref="dtoCustomerOrderService"/>
    </bean>

    <bean id="shopFederationFilter" class="org.yes.cart.service.federation.impl.ShopFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
    </bean>

    <bean id="categoryFederationFilter" class="org.yes.cart.service.federation.impl.CategoryFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1" ref="shopService"/>
    </bean>

    <bean id="promotionFederationFilter" class="org.yes.cart.service.federation.impl.PromotionFederationFilterImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
    </bean>

    <bean id="federationFacade" class="org.yes.cart.service.federation.impl.FederationFacadeImpl">
        <constructor-arg index="0" ref="shopFederationStrategy"/>
        <constructor-arg index="1">
            <map>
                <entry key="org.yes.cart.domain.dto.ManagerDTO" value-ref="managerFederationFilter"/>
                <entry key="org.yes.cart.domain.dto.CustomerDTO" value-ref="customerFederationFilter"/>
                <entry key="org.yes.cart.domain.dto.CustomerOrderDTO" value-ref="customerOrderFederationFilter"/>
                <entry key="org.yes.cart.payment.persistence.entity.CustomerOrderPayment" value-ref="customerOrderPaymentFederationFilter"/>
                <entry key="org.yes.cart.domain.dto.ShopDTO" value-ref="shopFederationFilter"/>
                <entry key="org.yes.cart.domain.dto.CategoryDTO" value-ref="categoryFederationFilter"/>
                <entry key="org.yes.cart.domain.dto.PromotionDTO" value-ref="promotionFederationFilter"/>
            </map>
        </constructor-arg>
    </bean>

</beans>
        
