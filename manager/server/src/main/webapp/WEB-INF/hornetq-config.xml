<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
       default-init-method="init" default-destroy-method="destroy">

    <bean name="nettyConnectorTransportConfiguration" class="org.hornetq.api.core.TransportConfiguration">
        <constructor-arg value="org.hornetq.core.remoting.impl.netty.NettyConnectorFactory"/>
        <constructor-arg>
            <map>
                <entry key="host" value="localhost"/>
                <entry key="port" value="5447"/>
                <entry key="use-nio" value="true"/>
            </map>
        </constructor-arg>
    </bean>

    <bean name="configuration" class="org.hornetq.core.config.impl.ConfigurationImpl">
        <property name="clustered" value="false"/>
        <property name="persistenceEnabled" value="true"/>
        <property name="JMXManagementEnabled" value="false"/>
        <property name="pagingDirectory"
                  value="#{systemProperties['java.io.tmpdir']+systemProperties['file.separator']+'yes-cart-hornetq-management'+systemProperties['file.separator']+'paging'}"/>
        <property name="bindingsDirectory"
                  value="#{systemProperties['java.io.tmpdir']+systemProperties['file.separator']+'yes-cart-hornetq-management'+systemProperties['file.separator']+'bindings'}"/>
        <property name="largeMessagesDirectory"
                  value="#{systemProperties['java.io.tmpdir']+systemProperties['file.separator']+'yes-cart-hornetq-management'+systemProperties['file.separator']+'large-messages'}"/>
        <property name="journalDirectory"
                  value="#{systemProperties['java.io.tmpdir']+systemProperties['file.separator']+'yes-cart-hornetq-management'+systemProperties['file.separator']+'journal'}"/>

        <!-- Security -->
        <property name="securityEnabled" value="false"/>

        <property name="connectorConfigurations">
            <map>
                <entry key="netty-connector" value-ref="nettyConnectorTransportConfiguration"/>
            </map>
        </property>

        <!-- Acceptors: match ports with connectors -->
        <property name="acceptorConfigurations">
            <set>
                <bean class="org.hornetq.api.core.TransportConfiguration">
                    <constructor-arg value="org.hornetq.core.remoting.impl.netty.NettyAcceptorFactory"/>
                    <constructor-arg>
                        <map>
                            <entry key="host" value="localhost"/>
                            <entry key="port" value="5447"/>
                            <entry key="use-nio" value="true"/>
                        </map>
                    </constructor-arg>
                    <!-- Name -->
                    <constructor-arg value="netty-internal"/>
                </bean>
            </set>
        </property>
    </bean>
    <!-- End Core configuration -->

</beans>