<import-descriptor>

    <entityIntface>org.yes.cart.domain.entity.SkuPrice</entityIntface>


    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>product_entity*.csv$</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <column-descriptor>
            <columnIndex>14</columnIndex>
            <fieldType>FIELD</fieldType>
            <regExp>(.*)</regExp>
            <lookupQuery>
                select p from SkuPriceEntity p
                where p.sku.code = ?1
                and p.shop.code = 'SHOP10'
                and p.currency = 'USD'
                and p.quantity = 1
            </lookupQuery> <!-- at this moment i see only one price tier -->
        </column-descriptor>

        <column-descriptor>
            <columnIndex>14</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>sku</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select p from ProductSkuEntity p where p.code = ?1</lookupQuery>
        </column-descriptor>


        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>shop</name>
            <lookupQuery>select a from ShopEntity a where a.code = 'SHOP10'</lookupQuery>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>13</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>regularPrice</name>
        </column-descriptor>


        <column-descriptor>
            <columnIndex>12</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>quantity</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>currency</name>
            <constant>USD</constant>
        </column-descriptor>



    </importColumns>
    <importFolder>/npa/import</importFolder>
</import-descriptor>