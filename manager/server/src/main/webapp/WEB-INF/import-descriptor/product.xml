<import-descriptor>

    <entityIntface>org.yes.cart.domain.entity.Product</entityIntface>

    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>productentity(.*).csv(.*)</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <!-- Primary key -->
        <column-descriptor>
            <columnIndex>5</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>code</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select p from ProductEntity p where p.code = ?1</lookupQuery>
        </column-descriptor>


        <!--  Productname -->
        <column-descriptor>
            <columnIndex>0</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>name</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!-- product type -->
        <column-descriptor>
            <columnIndex>2</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>producttype</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select pt from ProductTypeEntity pt where pt.name = ?1</lookupQuery>
        </column-descriptor>

        <!-- brand -->
        <column-descriptor>
            <columnIndex>3</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>brand</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select b from BrandEntity b where b.name = ?1</lookupQuery>
        </column-descriptor>

        <!-- availability type -->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>availability</name>
            <constant>1</constant>
        </column-descriptor>



        <!-- 9 key - value attribute  -->
       <column-descriptor>
            <columnIndex>9</columnIndex>
            <fieldType>KEYVALUE_SLAVE_FIELD</fieldType>
            <name>attribute</name>
            <importDescriptor class="import-descriptor">
                <entityIntface>org.yes.cart.domain.entity.AttrValueProduct</entityIntface>
                <insertSql>fast insert hack</insertSql>
                <importFile class="file-descriptor">
                    <columnDelimeter>;</columnDelimeter>
                    <textQualifier null="true"/>
                    <ignoreFirstLine>false</ignoreFirstLine>
                </importFile>
                <importColumns class="list">
                    <column-descriptor>
                        <columnIndex>-1</columnIndex>
                        <fieldType>FK_FIELD</fieldType>
                        <name>product</name>
                        <useMasterObject>true</useMasterObject>
                    </column-descriptor>
                    <column-descriptor>
                        <columnIndex>0</columnIndex>
                        <fieldType>FIELD</fieldType>
                        <name>val</name>
                        <regExp>(.*)-></regExp>
                        <useMasterObject>true</useMasterObject>
                        <lookupQuery>select v from AttrValueEntityProduct v where
                            v.attribute.code = ?1 and
                            v.product = ?2
                        </lookupQuery>
                    </column-descriptor>
                    <column-descriptor>
                        <columnIndex>0</columnIndex>
                        <fieldType>FK_FIELD</fieldType>
                        <regExp>(.*)-></regExp>
                        <name>attribute</name>
                        <lookupQuery>select a from AttributeEntity a where a.code = ?1</lookupQuery>
                    </column-descriptor>
                    <column-descriptor>
                        <columnIndex>0</columnIndex>
                        <fieldType>FIELD</fieldType>
                        <name>val</name>
                        <regExp>->(.*)</regExp>
                    </column-descriptor>

                </importColumns>
            </importDescriptor>
        </column-descriptor>





        <!-- Description -->
        <column-descriptor>
            <columnIndex>10</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>description</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!--featured-->
        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>featured</name>
            <constant>false</constant>
        </column-descriptor>



    </importColumns>
    <importFolder></importFolder>
</import-descriptor>