<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.Product</entity-type>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>productandcategorynames(.*).csv(.*)</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <select-sql>select p from ProductEntity p where p.guid = {guid}</select-sql>

    <import-columns>

        <!-- Primary key -->
        <column-descriptor>
            <column-index>0</column-index>
            <field-type>FIELD</field-type>
            <name>guid</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!-- SKU code -->
        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FIELD</field-type>
            <name>code</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!-- brand -->
        <column-descriptor>
            <column-index>3</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Brand</entity-type>
            <name>brand</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select b from BrandEntity b where b.name = {brand}</lookup-query>
        </column-descriptor>

        <!-- product type -->
        <column-descriptor>
            <column-index>4</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.ProductType</entity-type>
            <name>producttype</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select pt from ProductTypeEntity pt where pt.name = {producttype}</lookup-query>
        </column-descriptor>

        <!--  Productname -->
        <column-descriptor>
            <column-index>6</column-index>
            <field-type>FIELD</field-type>
            <name>name</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>7</column-index>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>en</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>8</column-index>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>ru</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>9</column-index>
            <field-type>FIELD</field-type>
            <name>displayName</name>
            <language>uk</language>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <!-- availability type -->
        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>availability</name>
            <value-constant>1</value-constant>
        </column-descriptor>

        <!-- Description -->
        <column-descriptor>
            <column-index>10</column-index>
            <field-type>FIELD</field-type>
            <name>description</name>
            <value-regex>(.{0,4000})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>11</column-index>
            <field-type>SLAVE_INLINE_FIELD</field-type>
            <name/>
            <import-descriptor>
                <entity-type>org.yes.cart.domain.entity.AttrValueProduct</entity-type>
                <import-file-descriptor>
                    <file-encoding>UTF-8</file-encoding>
                    <file-name-mask/>
                    <ignore-first-line>false</ignore-first-line>
                    <column-delimiter>,</column-delimiter>
                    <text-qualifier>&quot;</text-qualifier>
                </import-file-descriptor>
                <select-sql/>
                <insert-sql>
                    DELETE FROM TPRODUCTATTRVALUE
                        WHERE GUID = '{masterObjectId}_PRODDESC_en';
                    INSERT INTO TPRODUCTATTRVALUE (VERSION, PRODUCT_ID, GUID, CODE, VAL)
                        VALUES (0, {masterObjectId}, '{masterObjectId}_PRODDESC_en', 'PRODUCT_DESCRIPTION_en','{val}')
                </insert-sql>
                <import-columns>
                    <column-descriptor>
                        <column-index>11</column-index>
                        <field-type>FIELD</field-type>
                        <name>val</name>
                    </column-descriptor>
                </import-columns>
            </import-descriptor>
        </column-descriptor>

        <column-descriptor>
            <column-index>12</column-index>
            <field-type>SLAVE_INLINE_FIELD</field-type>
            <name/>
            <import-descriptor>
                <entity-type>org.yes.cart.domain.entity.AttrValueProduct</entity-type>
                <import-file-descriptor>
                    <file-encoding>UTF-8</file-encoding>
                    <file-name-mask/>
                    <ignore-first-line>false</ignore-first-line>
                    <column-delimiter>,</column-delimiter>
                    <text-qualifier>&quot;</text-qualifier>
                </import-file-descriptor>
                <select-sql/>
                <insert-sql>
                    DELETE FROM TPRODUCTATTRVALUE
                        WHERE GUID = '{masterObjectId}_PRODDESC_ru';
                    INSERT INTO TPRODUCTATTRVALUE (VERSION, PRODUCT_ID, GUID, CODE, VAL)
                        VALUES (0, {masterObjectId}, '{masterObjectId}_PRODDESC_ru', 'PRODUCT_DESCRIPTION_ru','{val}')
                </insert-sql>
                <import-columns>
                    <column-descriptor>
                        <column-index>12</column-index>
                        <field-type>FIELD</field-type>
                        <name>val</name>
                    </column-descriptor>
                </import-columns>
            </import-descriptor>
        </column-descriptor>

        <column-descriptor>
            <column-index>13</column-index>
            <field-type>SLAVE_INLINE_FIELD</field-type>
            <name/>
            <import-descriptor>
                <entity-type>org.yes.cart.domain.entity.AttrValueProduct</entity-type>
                <import-file-descriptor>
                    <file-encoding>UTF-8</file-encoding>
                    <file-name-mask/>
                    <ignore-first-line>false</ignore-first-line>
                    <column-delimiter>,</column-delimiter>
                    <text-qualifier>&quot;</text-qualifier>
                </import-file-descriptor>
                <select-sql/>
                <insert-sql>
                    DELETE FROM TPRODUCTATTRVALUE
                        WHERE GUID = '{masterObjectId}_PRODDESC_uk';
                    INSERT INTO TPRODUCTATTRVALUE (VERSION, PRODUCT_ID, GUID, CODE, VAL)
                        VALUES (0, {masterObjectId}, '{masterObjectId}_PRODDESC_uk', 'PRODUCT_DESCRIPTION_uk','{val}')
                </insert-sql>
                <import-columns>
                    <column-descriptor>
                        <column-index>13</column-index>
                        <field-type>FIELD</field-type>
                        <name>val</name>
                    </column-descriptor>
                </import-columns>
            </import-descriptor>
        </column-descriptor>

        <!-- availability type -->
        <column-descriptor>
            <column-index>14</column-index>
            <field-type>FIELD</field-type>
            <data-type>INT</data-type>
            <name>availability</name>
        </column-descriptor>

        <!--featured-->
        <column-descriptor>
            <column-index>15</column-index>
            <field-type>FIELD</field-type>
            <data-type>BOOLEAN</data-type>
            <name>featured</name>
        </column-descriptor>

        <!--tags -->
        <column-descriptor>
            <column-index>16</column-index>
            <field-type>FIELD</field-type>
            <data-type>STRING</data-type>
            <name>tag</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>17</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>minOrderQuantity</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>18</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>maxOrderQuantity</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>19</column-index>
            <field-type>FIELD</field-type>
            <data-type>DECIMAL</data-type>
            <name>stepOrderQuantity</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>20</column-index>
            <field-type>FIELD</field-type>
            <name>availablefrom</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>21</column-index>
            <field-type>FIELD</field-type>
            <name>availableto</name>
        </column-descriptor>

        <column-descriptor>
            <column-index>22</column-index>
            <field-type>SLAVE_INLINE_FIELD</field-type>
            <name/>
            <import-descriptor>

                <entity-type>org.yes.cart.domain.entity.ProductCategory</entity-type>

                <import-file-descriptor>
                    <file-encoding>UTF-8</file-encoding>
                    <file-name-mask>productcategorynames(.*).csv(.*)</file-name-mask>
                    <ignore-first-line>true</ignore-first-line>
                    <column-delimiter>;</column-delimiter>
                    <text-qualifier>&quot;</text-qualifier>
                </import-file-descriptor>

                <select-sql>select p from ProductCategoryEntity p where p.product.productId = {masterObjectId} and p.category.guid = {category}</select-sql>

                <import-columns>
                    <!-- Product -->
                    <column-descriptor>
                        <column-index>-1</column-index>
                        <field-type>FK_FIELD</field-type>
                        <entity-type>org.yes.cart.domain.entity.Product</entity-type>
                        <name>product</name>
                        <use-master-object>true</use-master-object>
                    </column-descriptor>
                    <!-- Category -->
                    <column-descriptor>
                        <column-index>22</column-index>
                        <field-type>FK_FIELD</field-type>
                        <entity-type>org.yes.cart.domain.entity.Category</entity-type>
                        <name>category</name>
                        <value-regex>(.{0,255})(.*)</value-regex>
                        <value-regex-group>1</value-regex-group>
                        <lookup-query>select c from CategoryEntity c where c.guid = {category}</lookup-query>
                    </column-descriptor>
                    <!-- Product rank in category -->
                    <column-descriptor>
                        <column-index>-1</column-index>
                        <field-type>FIELD</field-type>
                        <data-type>INT</data-type>
                        <name>rank</name>
                        <value-constant>500</value-constant>
                    </column-descriptor>
                </import-columns>
            </import-descriptor>
        </column-descriptor>

    </import-columns>
</import-descriptor>