<import-descriptor>
    <!--
    Example how related bulk import can consune the same file several times
    -->
    <entityIntface>com.npa.db.entity.ProductSku</entityIntface>

    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>product_entity*.csv$</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <!--  Name -->
        <column-descriptor>
            <columnIndex>0</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>name</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!-- Product code filed for lookup object -->
        <column-descriptor>
            <columnIndex>7</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>product</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select p from ProductEntity p where p.code = ?1</lookupQuery>
        </column-descriptor>

        <!-- product sku code-->
        <column-descriptor>
            <columnIndex>14</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>code</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select p from ProductSkuEntity p where p.code = ?1</lookupQuery>
        </column-descriptor>

        <!--  bar code -->
        <column-descriptor>
            <columnIndex>14</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>barCode</name>
            <regExp>(.*)</regExp>
        </column-descriptor>

        <!--  description  -->
        <column-descriptor>
            <columnIndex>15</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>description</name>
            <regExp>(.*)</regExp>
        </column-descriptor>



    </importColumns>
    <importFolder>/npa/import</importFolder>
</import-descriptor>