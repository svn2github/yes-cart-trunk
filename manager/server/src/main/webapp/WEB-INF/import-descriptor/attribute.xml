<import-descriptor>

    <entityIntface>org.yes.cart.domain.entity.Attribute</entityIntface>

    <importFile class="file-descriptor">
        <columnDelimeter>;</columnDelimeter>
        <textQualifier>&quot;</textQualifier>
        <ignoreFirstLine>true</ignoreFirstLine>
        <fileNameMask>producttypeattr.csv</fileNameMask>
        <fileEncoding>UTF-8</fileEncoding>
    </importFile>

    <importColumns class="list">

        <column-descriptor> <!-- promary key -->
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>code</name>
            <regExp>(.*)</regExp>
            <lookupQuery>select b from AttributeEntity b where b.code = ?1</lookupQuery>
        </column-descriptor>


        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>mandatory</name>
            <constant>true</constant>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>allowduplicate</name>
            <constant>false</constant>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>allowfailover</name>
            <constant>false</constant>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>rank</name>
            <constant>500</constant>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>name</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>1</columnIndex>
            <fieldType>FIELD</fieldType>
            <name>description</name>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>etype</name>
            <lookupQuery>select b from EtypeEntity b where b.businesstype = 'String'</lookupQuery>
        </column-descriptor>

        <column-descriptor>
            <columnIndex>-1</columnIndex>
            <fieldType>FK_FIELD</fieldType>
            <name>attributeGroup</name>
            <lookupQuery>select b from AttributeGroupEntity b where b.code = 'PRODUCT'</lookupQuery>
        </column-descriptor>



    </importColumns>
    <importFolder></importFolder>
</import-descriptor>