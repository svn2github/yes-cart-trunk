<import-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/xstream/import-descriptor-1.0.0.xsd">

    <entity-type>org.yes.cart.domain.entity.Attribute</entity-type>

    <import-directory></import-directory>

    <import-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name-mask>producttypeattr(.*).csv(.*)</file-name-mask>
        <ignore-first-line>true</ignore-first-line>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </import-file-descriptor>

    <import-columns>

        <column-descriptor> <!-- primary key -->
            <column-index>1</column-index>
            <field-type>FIELD</field-type>
            <name>code</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
            <lookup-query>select b from AttributeEntity b where b.code = ?1</lookup-query>
        </column-descriptor>


        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>mandatory</name>
            <value-constant>true</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>allowduplicate</name>
            <value-constant>false</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>allowfailover</name>
            <value-constant>false</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FIELD</field-type>
            <name>rank</name>
            <value-constant>500</value-constant>
        </column-descriptor>

        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FIELD</field-type>
            <name>name</name>
            <value-regex>(.{0,255})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>1</column-index>
            <field-type>FIELD</field-type>
            <name>description</name>
            <value-regex>(.{0,4000})(.*)</value-regex>
            <value-regex-group>1</value-regex-group>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.Etype</entity-type>
            <name>etype</name>
            <lookup-query>select b from EtypeEntity b where b.businesstype = 'String'</lookup-query>
        </column-descriptor>

        <column-descriptor>
            <column-index>-1</column-index>
            <field-type>FK_FIELD</field-type>
            <entity-type>org.yes.cart.domain.entity.AttributeGroup</entity-type>
            <name>attributeGroup</name>
            <lookup-query>select b from AttributeGroupEntity b where b.code = 'PRODUCT'</lookup-query>
        </column-descriptor>

    </import-columns>
</import-descriptor>